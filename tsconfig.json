{
    "compilerOptions": {
      "target": "es2016",                                  
      "lib": ["es6"],                                      
      "module": "commonjs",
      "rootDir": "backend",
      "resolveJsonModule": true,
      "allowJs": false,
      "outDir": "build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": false,
      "skipLibCheck": true
    }
  }